<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/place_visit_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen240"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/img_1"/>

    <TextView
        android:id="@+id/place_name_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:text="PLACE"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen56"
        app:layout_constraintBottom_toBottomOf="@+id/place_visit_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>